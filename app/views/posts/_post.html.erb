<%= render 'shared/header' %>

<div>
  <div class='bg-white py-4 px-6 rounded shadow-md'>
    <span class='flex flex-row-reverse text-sm'><%= time_ago_in_words(post.created_at) %>前</span>
    <%= link_to post do %>
      <%= image_tag post.image.url(:small), class: 'rounded pt-2'%>
      <span class='inline-block text-lg mt-2'><%= post.content %></span>
    <% end %>

    <% if logged_in? && post.user == current_user %>
    <div class='grid grid-cols-2 gap-2 text-white mt-4'>
      <div><%= link_to "編集", edit_post_path(post), class: 'bg-blue-900 rounded-3xl px-2 py-1' %></div>
      <div><%= link_to "削除", post_path(post), method: :delete, class: 'bg-blue-900 rounded-3xl px-2 py-1'%></div>
    <% end %>
    </div>
  </div>
</div>
