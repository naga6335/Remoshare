<%= render "shared/header" %>
<div class="container mx-auto">
  <div class="base flex flex-col sm:text-base">
    <h1 class="title text-sm sm:text-xl"><%= "##{@tag.tag_name}" %> のタグの投稿 <%= "#{@posts.count}件" %></h1>
    <div class="grid grid-cols-1 sm:grid-cols-4 w-full gap-6">
    <% @posts.each do |post| %>
      <%= render post %>
    <% end %>
  </div>
</div>
