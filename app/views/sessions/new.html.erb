<div class="flex items-center my-auto">
  <div class="container mx-auto">
    <div class="max-w-md mx-auto">
      <h1 class="title text-3xl">ログイン</h1>
        <div class="mb-6">
          <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
          <%= f.label :メールアドレス, class: "form-title" %>
          <%= f.email_field :email, class: "form focus:outline-none focus:shadow-outline" %>
        </div>
        <div class="mb-6">
          <%= f.label :パスワード, class: "form-title" %>
          <%= f.password_field :password, class: "form focus:outline-none focus:shadow-outline" %>
        </div>
        <div class="mb-6">
          <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %> <span class="text-sm text-gray-600">次回から自動でログイン</span>
          <% end %>
        </div>
        <div class="mb-6">
          <%= f.submit "ログイン", class: "log-btn bg-blue-800 focus:bg-gray-400 focus:outline-none" %>
        </div>
        <div class="mb-6">
          <%= link_to "ゲストログイン（閲覧用）", guest_path, class: "log-btn block text-center bg-green-500 focus:bg-gray-400 focus:outline-none" %>
        </div>
          <p class= "text-sm text-center text-gray-600">新規登録の方は<%= link_to "こちら", signup_path, class: "font-bold text-blue-800 focus:text-gray-500" %></p>
        <% end %>
    </div>
  </div>
</div>
