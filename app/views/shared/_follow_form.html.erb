<% unless current_user?(@user) %>
  <div id="follow_form">
  <% if current_user.following?(@user) %>
    <%= form_with(model: current_user.active_relation.find_by(followed_id: @user.id), html: { method: :delete }, remote: true) do |f| %>
    <%= f.submit "フォロー解除", class: "btn" %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.active_relation.build, remote: true) do |f| %>
    <div><%= hidden_field_tag :followed_id, @user.id %></div>
    <%= f.submit "フォローする", class: "btn btn-primary" %>
    <% end %>
  <% end %>
  </div>
<% end %>
