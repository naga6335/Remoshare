<% unless current_user?(@user) %>
  <div class='py-2'>
    <% if current_user.following?(@user) %>
      <%= form_with(model: current_user.active_relation.find_by(followed_id: @user.id), html: { method: :delete }, remote: true) do |f| %>
        <%= f.submit "フォロー解除", class: 'py-2 px-2 bg-gray-500 rounded-3xl text-white text-xs' %>
      <% end %>
    <% else %>
      <%= form_with(model: current_user.active_relation.build, remote: true) do |f| %>
        <%= hidden_field_tag :followed_id, @user.id %>
        <%= f.submit "フォローする", class: 'py-2 px-2 bg-blue-900 rounded-3xl text-white text-xs' %>
      <% end %>
    <% end %>
  </div>
<% end %>
