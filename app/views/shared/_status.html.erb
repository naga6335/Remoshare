<% @user ||= current_user %>
<div class='mx-auto text-xs p-2 bg-blue-900 text-white rounded-full mb-5'>
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class='hover:text-gray-500'>
      <%= @user.following.count %>
    </strong>
    フォロー
  </a>
  <span> | </span>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class='hover:text-gray-500'>
    <%= @user.followers.count %>
    </strong>
    フォロワー
  </a>
</div>
