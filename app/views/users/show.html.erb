<div>
  <aside>
    <section>
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <section class="status">
    <%= render 'shared/status' %>
  </section>
    <%= render 'shared/follow_form' if logged_in? %>
  <div>
    <% if @user.posts.any? %>
      <h3>posts(<%= @user.posts.count %>)</h3>
      <ol>
        <%= render @posts %>
      </ol>
      <%= paginate @posts %>
    <% end %>
  </div>
</div>
