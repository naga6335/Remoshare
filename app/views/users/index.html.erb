<%= render "shared/header" %>
<div class="container mx-auto">
  <div class="flex flex-col mx-auto w-full bg-white py-4 text-gray-600 hover:shadow-2xl transition duration-500 ease-in-out">
  <h1 class="title">ユーザー一覧</h1>
  <%= form_with url: users_path, method: :get, local: true do |f| %>
    <div class="search flex focus:outline-none mx-6">
      <%= f.text_field :keyword, placeholder: "例）ユーザー名、営業職、、", class: "w-full inline-block mx-2 focus:outline-none" %>
      <%= f.submit :"検索", class:"small-btn cursor-pointer focus:outline-none　transition duration-200 ease-in-out hover:bg-gray-500" %>
    </div>
  <% end %>
    <% if @users.present? %>
      <%= render @users %>
    <% else %>
      <p class="text-center mt-5">該当のユーザーはいません</p>
    <% end %>
    <div class="mt-10 mx-auto text-center text-xl">
      <%= paginate @users %>
    </div>
  </div>
</div>
