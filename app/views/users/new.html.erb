<div class="flex items-center min-h-screen">
  <div class="container mx-auto">
    <div class="max-w-md mx-auto my-10">
      <h1 class="my-3 text-3xl text-center font-semibold text-gray-700">新規登録</h1>
        <div class="m-7">
            <%# エラーメッセージの修正必要！ %>
            <%= form_with(model: @user, local: true) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
          <div class="mb-6">
            <%= f.label :名前, class: 'block mb-2 text-sm text-gray-600' %>
            <%= f.text_field :name, class: 'w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-blue-100 focus:border-blue-300' %>
          </div>
          <div class="mb-6">
            <%= f.label :職種, class: 'block mb-2 text-sm text-gray-600'%>
            <%= f.select :job, [['営業','営業'],['販売、フード、レジャー','販売、フード、レジャー'],['医療、福祉','医療、福祉'],['企画、経営','企画、経営'],['ITエンジニア','ITエンジニア'],['研究職','研究職'],['金融、不動産専門','金融、不動産専門'],['クリエイティブ','クリエイティブ'],['公務員','公務員'],['管理、事務','管理、事務'],['美容、ブライダル','美容、ブライダル'],['交通','交通'],['保育、教育','保育、教育'],['その他','その他']], {}, class: 'w-full px-3 py-2 bg-white border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-blue-100 focus:border-blue-200' %>
          </div>
          <div class="mb-6">
            <%= f.label :メールアドレス, class: 'block mb-2 text-sm text-gray-600'%>
            <%= f.email_field :email, class: 'w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-blue-100 focus:border-blue-200' %>
          </div>
          <div class="mb-6">
              <%= f.label :パスワード, class: 'block mb-2 text-sm text-gray-600'%>
              <%= f.password_field :password, class: 'w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-blue-100 focus:border-blue-200' %>
          </div>
          <div class="mb-6">
              <%= f.label :パスワード再入力, class: 'block mb-2 text-sm text-gray-600'%>
              <%= f.password_field :password_confirmation, class: 'w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-blue-100 focus:border-blue-200' %>
          </div>
          <div class="mb-6">
              <%= f.submit "登録する", class: "w-full px-2 py-3 text-white bg-blue-900 rounded-md focus:bg-blue-700 focus:outline-none" %>
          </div>
          <p class= 'text-sm text-center text-gray-600'>すでにアカウントをお持ちの方は<%= link_to "こちら", login_path, class:'text-blue-900 focus:underline focus:text-blue-600'%></p>
          <% end %>
        </div>
    </div>
  </div>
</div>
