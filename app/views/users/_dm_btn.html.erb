<% if @user.id == current_user.id %>
  <%= @msg %>
<% else %>
  <% if @isRoom == true %>
    <%= link_to 'DMへ', room_path(@roomId), class: "small-btn bg-green-500 focus:outline-none" %>
  <% else %>
    <%= form_with(model: @room, local: true) do |f| %>
      <%= fields_for @entry do |e|%>
        <% e.hidden_field :user_id, value: @user.id %>
      <% end %>
      <%= f.submit "DMを開始する",  class:"small-btn bg-green-500 focus:outline-none" %>
    <% end %>
  <% end %>
<% end %>
