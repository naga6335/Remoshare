<% if current_user.id == @user.id %>
  <% @rooms.each do |r| %>
    <%= link_to room_path(r) do %>
      <% r.users.each do |u| %>
        <% if u.id == current_user.id %>
        <% else %>
          <% if u.avatar? %>
            <%= image_tag u.avatar.url, id: 'preview', class: 'small-icon' %>
          <% else %>
            <%= image_tag asset_path('default.png'), id: 'preview', alt: 'ユーザーアイコン', class: 'small-icon' %>
          <% end %>
            <%= u.name %>
        <% end %>
      <% end %>
      <%= most_new_message_preview(r) %>
    <% end %>
  <% end %>
<% end %>
