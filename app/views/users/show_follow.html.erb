<%= render 'shared/header'%>

<div class="container mx-auto mt-24 text-center text-blue-900">
  <%= link_to @user do %>
    <div class='inline-block mb-4 text-2xl hover:text-gray-500'>
      <%= @user.name %>
    </div>
  <% end %>
  <div>
    <%= render 'shared/status' %>
  </div>
  <div class='flex flex-col mt-10'>
    <% if @users.any? %>
      <%= render @users %>
    <% end %>
  </div>
</div>
