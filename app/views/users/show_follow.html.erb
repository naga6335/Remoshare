<%= render "shared/header"%>
<div class="container mx-auto">
  <div class="flex flex-col mx-auto w-full bg-white py-4 text-gray-600 rounded hover:shadow-2xl transition duration-500 ease-in-out">
    <div class="title">
      <%= link_to @user do %>
        <%= @user.name %>
      <% end %>
    </div>
    <%= render "shared/status" %>
    <% if @users.any? %>
      <%= render @users %>
    <% end %>
  </div>
</div>
